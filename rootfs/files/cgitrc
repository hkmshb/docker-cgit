section-sort=1
section-from-path=1

remove-suffix=1
repository-sort=age

about-filter=/usr/lib/cgit/filters/about-formatting.sh
source-filter=/usr/lib/cgit/filters/syntax-highlighting.sh
project-list=/srv/repo.list
scan-path=/srv/projects

